<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/border_bottom"
            android:padding="20dp"
            android:src="@drawable/logo3"></ImageView>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="천안캠 생활관 식당"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/meal"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="조식"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="평일 운영안함"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="주말/공휴일"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="중식"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="평일 12:00 ~ 13:30"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="주말/공휴일"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="석식"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="평일 17:40 ~ 19:00"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="주말/공휴일"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="일자"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="요일"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text=" \n \n 중식 \n \n "
                        android:textSize="10sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_down_gray"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text=" \n \n 석식 \n \n "
                        android:textSize="10sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="11월 15일"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/weekday1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="월"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day1_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="중식"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day1_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_down"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="석식"
                        android:textSize="10sp"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="11월 15일"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/weekday2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="화"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day2_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="중식"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day2_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_down"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="석식"
                        android:textSize="10sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="11월 15일"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/weekday3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="화"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day3_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="중식"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day3_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_down"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="석식"
                        android:textSize="10sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="11월 15일"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/weekday4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="목"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day4_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="중식"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day4_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_down"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="석식"
                        android:textSize="10sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="11월 15일"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/weekday5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="금"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day5_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_last"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="중식"
                        android:textSize="10sp"></TextView>

                    <TextView
                        android:id="@+id/day5_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_full"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:text="석식"
                        android:textSize="10sp"></TextView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>


</ScrollView>




